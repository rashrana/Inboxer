<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272640"
    tools:context=".Fragments.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="#605050" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:foregroundGravity="bottom"
                android:src="@drawable/dragonball"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1dp"
                app:elevation="3dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/change"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/profileimage"
                android:layout_alignRight="@+id/profileimage"
                android:layout_alignBottom="@+id/profileimage"
                android:clickable="true"
                android:contentDescription="Button"
                android:focusable="true"
                android:scaleType="centerInside"
                app:backgroundTint="@color/white"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:fabSize="mini"
                app:srcCompat="@drawable/addpic"
                tools:ignore="VectorDrawableCompat" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="username"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawablePadding="5dp"
                app:drawableTint="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:text="Email Address"
                android:textSize="23sp"
                app:drawableStartCompat="@drawable/emailicon" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:text="email"
                android:textSize="22sp"
                tools:ignore="RtlSymmetry" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Date of Birth"
                android:textSize="23sp"
                app:drawableStartCompat="@drawable/calendaricon"
                app:drawableTint="@color/black" />

            <TextView
                android:id="@+id/dateofbirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:text="11/02/2020"
                android:textSize="22sp"
                tools:ignore="RtlSymmetry" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawablePadding="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Address"
                android:textSize="23sp"
                app:drawableLeftCompat="@drawable/location" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:text="Not provided"
                android:textSize="22sp"
                tools:ignore="RtlSymmetry" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Phone no."
                android:textSize="23sp"
                app:drawableStartCompat="@drawable/call" />

            <TextView
                android:id="@+id/phoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:text="Not added"
                android:textSize="22sp"
                tools:ignore="RtlSymmetry" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawablePadding="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Sex"
                android:textSize="23sp"
                app:drawableLeftCompat="@drawable/sexicon" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:text="Not provided"
                android:textSize="22sp"
                tools:ignore="RtlSymmetry" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

    </LinearLayout>




</FrameLayout>