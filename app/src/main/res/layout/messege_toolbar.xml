<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messegeToolBar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#605050">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/messgoback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            app:drawableEndCompat="@drawable/gobackicon"
            app:drawableTint="@color/white"
            android:layout_alignParentStart="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/messgoback"
            android:layout_centerVertical="true"
            android:src="@drawable/profiledefault"
            app:civ_border_color="#80000000"
            app:civ_border_width="1dp"
            android:layout_toEndOf="@+id/messgoback" />

        <TextView
            android:id="@+id/messname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/messimage"
            android:layout_toRightOf="@+id/messimage"
            android:fontFamily="@font/poppins_light"
            android:text="Friend"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>